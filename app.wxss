/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 100rpx 0;
  box-sizing: border-box;
} 

.backClass {
  background: #000000;
  background: -webkit-linear-gradient(top, #000000 0%, #1f1f1f 100%);
  background: linear-gradient(to bottom, #000000 0%, #1f1f1f 100%);
  opacity: 0.9;
  position: absolute;
  height: 100%;
  left: 0;
  width: 100%;
  overflow-x: hidden;
}
